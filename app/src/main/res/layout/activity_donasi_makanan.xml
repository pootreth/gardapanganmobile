<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/donasimakanancontent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    tools:context=".DonasiMakananActivity">

    <LinearLayout
        android:id="@+id/donasi_makanan_page"
        android:layout_width="316dp"
        android:layout_height="564dp"
        android:background="@drawable/donasi"
        android:foregroundGravity="center"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/donasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:foregroundGravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bannerdonasi"
                android:layout_width="255.67dp"
                android:layout_height="40.33dp"
                app:srcCompat="@drawable/banner_donasi" />

            <LinearLayout
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:foregroundGravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/individu"
                    android:layout_width="71dp"
                    android:layout_height="87dp"
                    app:srcCompat="@drawable/individu" />

                <TextView
                    android:id="@+id/text_individu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/googlesans_bold"
                    android:text="Donasi Individu"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/mulai1"
                    android:layout_width="78dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/buttonmulai" />

                <ImageView
                    android:id="@+id/resto"
                    android:layout_width="80dp"
                    android:layout_height="65dp"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@drawable/restoran" />

                <TextView
                    android:id="@+id/text_resto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/googlesans_bold"
                    android:text="Donasi Restoran"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/mulai2"
                    android:layout_width="78dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/buttonmulai" />

                <ImageView
                    android:id="@+id/event"
                    android:layout_width="74dp"
                    android:layout_height="83dp"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@drawable/event" />

                <TextView
                    android:id="@+id/text_event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/googlesans_bold"
                    android:text="Donasi Event"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/mulai3"
                    android:layout_width="78dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/buttonmulai" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>