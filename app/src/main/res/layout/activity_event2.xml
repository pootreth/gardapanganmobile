<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Event2Activity">

    <ScrollView
        android:id="@+id/contentevent2"
        android:layout_width="match_parent"
        android:layout_height="540dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/dapoermantabmap"
                android:layout_width="wrap_content"
                android:layout_height="205dp"
                app:srcCompat="@drawable/dapoermantabmap" />

            <ImageView
                android:id="@+id/contenteventt2"
                android:layout_width="wrap_content"
                android:layout_height="410dp"
                android:layout_marginBottom="20dp"
                android:scrollbarSize="1dp"
                app:srcCompat="@drawable/contentevent2" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/contentsplit2"
        android:layout_width="match_parent"
        android:layout_height="540dp"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/dapoermantabmapp"
            android:layout_width="wrap_content"
            android:layout_height="205dp"
            app:srcCompat="@drawable/dapoermantabmap" />

        <ImageView
            android:id="@+id/contentsplit1"
            android:layout_width="match_parent"
            android:layout_height="410dp"
            android:layout_marginBottom="20dp"
            android:scrollbarSize="1dp"
            app:srcCompat="@drawable/contentevent2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/pesertab"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/peserta" />

        <LinearLayout
            android:id="@+id/buttonbawah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tidakbisa2"
                android:layout_width="100dp"
                android:layout_height="45dp"
                app:srcCompat="@drawable/tidakbisa" />

            <ImageView
                android:id="@+id/daftar2"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_marginStart="12dp"
                app:layout_constraintTop_toBottomOf="@id/buttonbawah"
                app:srcCompat="@drawable/daftar" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/buttonbawah2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/chatt"
            android:layout_width="100dp"
            android:layout_height="45dp"
            app:srcCompat="@drawable/chaat" />

        <ImageView
            android:id="@+id/daftar9"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toBottomOf="@id/buttonbawah"
            app:srcCompat="@drawable/daftar1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonbawah3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <ImageView
            android:id="@+id/tidakbisa3"
            android:layout_width="300dp"
            android:layout_height="45dp"
            app:srcCompat="@drawable/tidakbisa1" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>