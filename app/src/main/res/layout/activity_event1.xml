<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:gravity="bottom"
    app:umanoDragView="@id/drag_view"
    app:umanoScrollableView="@id/vieww"
    app:umanoPanelHeight="400dp"
    app:umanoOverlay="false"
    app:umanoParallaxOffset="100dp"
    app:umanoShadowHeight="4dp"
    tools:context=".Event1Activity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/belinnmap"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            app:srcCompat="@drawable/belinnmap" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/drag_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="false"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/contentevent1">
        </ImageView>

        <LinearLayout
            android:id="@+id/vieww"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/tidakbisa"
                android:layout_width="100dp"
                android:layout_height="45dp"
                app:srcCompat="@drawable/tidakbisa" />

            <ImageView
                android:id="@+id/daftar"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_marginStart="12dp"
                app:srcCompat="@drawable/daftar" />

        </LinearLayout>
    </LinearLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>