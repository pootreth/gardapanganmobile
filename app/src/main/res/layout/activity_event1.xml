<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Event1Activity">

    <ImageView
        android:id="@+id/belinnmap"
        android:layout_width="410dp"
        android:layout_height="230dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/belinnmap" />

    <LinearLayout
        android:id="@+id/buttonacc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/belinnmap">

        <ImageView
            android:id="@+id/tidakbisa"
            android:layout_width="120dp"
            android:layout_height="54dp"
            app:srcCompat="@drawable/tidakbisa" />

        <ImageView
            android:id="@+id/daftar"
            android:layout_width="240dp"
            android:layout_height="54dp"
            android:layout_marginStart="12dp"
            app:srcCompat="@drawable/daftar" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>