<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Event1Activity">

    <ScrollView
        android:id="@+id/contentevent1"
        android:layout_width="match_parent"
        android:layout_height="540dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/keputihnmap"
                android:layout_width="410dp"
                android:layout_height="210dp"
                app:srcCompat="@drawable/belinnmap" />

            <ImageView
                android:id="@+id/contenteventt1"
                android:layout_width="match_parent"
                android:layout_height="410dp"
                android:layout_marginBottom="20dp"
                android:scrollbarSize="1dp"
                app:srcCompat="@drawable/contentevent1" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/contentsplit1"
        android:layout_width="match_parent"
        android:layout_height="540dp"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/belinnmapp"
            android:layout_width="410dp"
            android:layout_height="210dp"
            app:srcCompat="@drawable/belinnmap" />

        <ImageView
            android:id="@+id/contentsplitt1"
            android:layout_width="match_parent"
            android:layout_height="410dp"
            android:layout_marginBottom="20dp"
            android:scrollbarSize="1dp"
            app:srcCompat="@drawable/contentevent1" />

    </LinearLayout>

    //visible, invisible kalo klik apa aja
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/pesertab"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/peserta" />

        <LinearLayout
            android:id="@+id/buttonbawah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tidakbisa1"
                android:layout_width="100dp"
                android:layout_height="45dp"
                app:srcCompat="@drawable/tidakbisa" />

            <ImageView
                android:id="@+id/daftar1"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_marginStart="12dp"
                app:layout_constraintTop_toBottomOf="@id/buttonbawah"
                app:srcCompat="@drawable/daftar" />

        </LinearLayout>
    </LinearLayout>

    //invisible, visible kalo klik daftar
    <LinearLayout
        android:id="@+id/buttonbawah1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/chatt"
            android:layout_width="100dp"
            android:layout_height="45dp"
            app:srcCompat="@drawable/chaat" />

        <ImageView
            android:id="@+id/daftarr1"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toBottomOf="@id/buttonbawah"
            app:srcCompat="@drawable/daftar1" />

    </LinearLayout>

    //invisible, visible kalo klik tidak bisa
    <LinearLayout
        android:id="@+id/buttonbawahh1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <ImageView
            android:id="@+id/tidakbisaa1"
            android:layout_width="300dp"
            android:layout_height="45dp"
            app:srcCompat="@drawable/tidakbisa1" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>